{
  "manifest_version": 3,
  "name": "Zhuyin",
  "description": "Display Zhuyin Fuhao (bopomofo) next to Traditional Chinese characters.",
  "version": "2025.12.13.1",
  "icons": {
    "16": "images/icon-off-16.png",
    "32": "images/icon-off-32.png",
    "48": "images/icon-off-48.png",
    "128": "images/icon-off-128.png"
  },
  "background": {
    "service_worker": "toggle.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-off-16.png",
      "32": "images/icon-off-32.png",
      "48": "images/icon-off-48.png",
      "128": "images/icon-off-128.png"
    },
    "default_title": "Zhuyin"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/BpmfGenSenRounded/BpmfGenSenRounded-R.ttf"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "zhuyin.js"
      ],
      "run_at": "document_idle"
    }
  ]
}